#!/bin/sh
exec 2>&1

[ -d env ] && setenv="-e $(pwd)/env"

exec chpst $setenv cfssl -loglevel 0 serve \
-ca-bundle <%= node['cfssl']['server']['ca'] %> \
-ca-key <%= node['cfssl']['server']['ca-key'] %> \
-ca <%= node['cfssl']['server']['ca'] %> \
-config <%= node['cfssl']['server']['config-file'] %>